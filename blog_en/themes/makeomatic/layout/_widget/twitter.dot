{{? it.theme.twitter.username }}
<div class="widget twitter">
  <h3 class="title">
		<a href="http://twitter.com/{{! theme.twitter.username }}">@{{! it.theme.twitter.username }}</a>'s {{! it.__('tweets') }}
	</h3>
  <ul id="tweets"></ul>
</div>

<script type="text/javascript">
var twitter_stream = ['{{! it.theme.twitter.username }}', {{! it.theme.twitter.tweet_count }}, {{! it.theme.twitter.show_replies }}];
var moment_js_path = '{{= it.config.root }}js/moment.min.js';
</script>
<script src="{{= it.config.root }}js/twitter.js"></script>
{{?}}
